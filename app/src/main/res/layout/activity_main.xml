<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">

    <Button
        android:background="@color/textColorBackground"
        android:id="@+id/convertWeightButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:text="Convert Weight"
        android:textColor="@color/textColor"
        android:layout_marginTop="120dp"
        />

    <Button
        android:background="@color/textColorBackground"
        android:id="@+id/convertLengthButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/convertWeightButton"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:textColor="@color/textColor"
        android:text="Convert Length"
        android:layout_marginTop="30dp"
        />

    <Button
        android:background="@color/textColorBackground"
        android:textColor="@color/textColor"
        android:id="@+id/convertVolumeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/convertLengthButton"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:text="Convert Volume"
        android:layout_marginTop="30dp"
        />

</RelativeLayout>